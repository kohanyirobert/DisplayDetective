{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Warning"
        },
        "Console": {
            "FormatterName": "Simple",
            "FormatterOptions": {
                "SingleLine": true,
                "TimestampFormat": "HH:mm:ss ",
                "UseUtcTimestamp": false
            }
        }
    },
    "DisplayDetective": {
        "Watches": [
            {
                "DeviceID": "TestDeviceID",
                "CreateCommand": "test1.exe",
                "CreateArguments": [
                    "argX",
                    "argY"
                ],
                "DeleteCommand": "test2.exe",
                "DeleteArguments": [
                    "argZ"
                ]
            }
        ]
    }
}